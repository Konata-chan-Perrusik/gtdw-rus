					  			widget = {
									size = { 420 550 } # Size for entire container
									widget = {
										size = { 500 500 } # To get rid of disappearing effect
										position = { 0 -20 } # To move border and image together
										parentanchor = hcenter|vcenter
										icon = {
											parentanchor = hcenter|vcenter
											size = { 380 500 } # Image Border Size
											texture = "gfx/interface/component_tiles/interaction_menu_more_bg.dds"
										}
										icon = {
											parentanchor = hcenter|vcenter
											size = { 340 460 } # Image Size
											position = { 0 0 }
											texture = "gfx/interface/icons/lore_doc_images/fear_the_magi.dds"
										}
									}

									text_multi = {
										using = LoreDoc_CaptionText
										text = "FEAR_THE_MAGI_CAPTION"
										max_width = 320
									}

									background = { using = Background_Area_Dark }
								}

								widget = { size = { 0 10 } } # Spacer

								text_multi = {
									using = LoreDoc_StandardText
									text = "THE_RISE_OF_THE_NORTH_TEXT_8"
								}

								widget = { size = { 0 20 } }  # To offset margin change
							}
							expand = {}		
						}
					}
				}
			}

			divider_light = {
  				layoutpolicy_horizontal = expanding
		  	}

			hbox = {
				widget = {
					visible = "[Not(GetVariableSystem.Exists('show_lore_doc_sidebar'))]"
					size = { 250 0 }
				}
				button_back = {
					onclick = "[GetScriptedGui('lore_doc_backward').Execute( GuiScope.SetRoot( GetPlayer.MakeScope ).End )]"
					enabled = "[GreaterThan_CFixedPoint( GetPlayer.MakeScope.Var('gh_lore_doc_page').GetValue, '(CFixedPoint)0' )]"
				}
				button_forward = {
					onclick = "[GetScriptedGui('lore_doc_forward').Execute( GuiScope.SetRoot( GetPlayer.MakeScope ).End )]"
					enabled = "[LessThan_CFixedPoint( GetPlayer.MakeScope.Var('gh_lore_doc_page').GetValue, '(CFixedPoint)6' )]"
				}
			}
		}
	}
}

template LoreDoc_StandardText
{
	autoresize = yes
	max_width = 575
	min_width = 575
	margin = { 20 0 }
}

template LoreDoc_CaptionText
{
	autoresize = yes
	margin = { 0 15 }
	max_width = 400
	fontsize = 12
	fontsize_min = 11
	parentanchor = hcenter|bottom
	align = top|hcenter
}